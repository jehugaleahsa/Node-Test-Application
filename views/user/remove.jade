.container
    form(method='post', action='/user/remove')
        input(type='hidden', name='id', value='#{user.id}')
        .row
            .span3 &nbsp;
            .span6.page-header.confirm Are you sure you want to remove #{user.name}?
            .span3
        .row
            .span3 &nbsp;
            .span6.form-actions
                button.btn.btn-warning Yes
                | 
                a.btn(href='/user/index') No
            .span3