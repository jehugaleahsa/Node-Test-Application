.templates
.container
    h1 Users
    .row
        table.table-striped.table-bordered.span12(id='user-table')
            thead
                tr
                    th Name
                    th
                    th
            tbody
                each user in users
                    tr
                        td= user.name
                        td 
                            a.btn.btn-primary.btn-small.edit-user-btn(data-user-id='#{user.id}') Edit
                        td 
                            a.btn.btn-primary.btn-small.remove-user-btn(data-user-id='#{user.id}') Remove
    .row
        a.span2.btn.btn-primary(id='create-user-btn') Create User