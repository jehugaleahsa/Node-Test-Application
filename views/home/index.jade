.container
    h1 Users
    .row
        table.table-striped.table-bordered.span12
            thead
                tr
                    th Name
                    th
                    th
            tbody
            each user in users
                tr
                    td= user.name
                    td 
                        a(href='/home/edit/#{user.id}') Edit
                    td 
                        a(href='/home/remove/#{user.id}') Remove
    .row
        a.span12(href='/home/create') Create User